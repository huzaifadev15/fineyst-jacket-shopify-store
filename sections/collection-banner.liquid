{%- style -%}
  .collection-banner {
    padding: 12rem 0 4rem;
    background: var(--color-primary);
    color: #fff;
    text-align: center;
  }

  .collection-banner--with-image {
    position: relative;
    padding: 16rem 0 6rem;
  }

  .collection-banner__image {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .collection-banner__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-banner__image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.5);
  }

  .collection-banner__content {
    position: relative;
    z-index: 2;
  }

  .collection-banner__title {
    font-size: clamp(3rem, 5vw, 5rem);
    font-weight: 700;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .collection-banner__description {
    font-size: 1.6rem;
    max-width: 60rem;
    margin: 0 auto;
    opacity: 0.9;
  }
{%- endstyle -%}

{%- liquid
  assign has_image = false
  if collection.image != blank and section.settings.show_image
    assign has_image = true
  endif
-%}

<section class="collection-banner{% if has_image %} collection-banner--with-image{% endif %}">
  {%- if has_image -%}
    <div class="collection-banner__image">
      <img
        src="{{ collection.image | image_url: width: 1920 }}"
        srcset="
          {{ collection.image | image_url: width: 768 }} 768w,
          {{ collection.image | image_url: width: 1200 }} 1200w,
          {{ collection.image | image_url: width: 1920 }} 1920w
        "
        sizes="100vw"
        alt="{{ collection.image.alt | default: collection.title }}"
        loading="eager"
      >
    </div>
  {%- endif -%}

  <div class="container">
    <div class="collection-banner__content">
      <h1 class="collection-banner__title">{{ collection.title }}</h1>
      {%- if collection.description != blank and section.settings.show_description -%}
        <div class="collection-banner__description">
          {{ collection.description }}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection Banner",
  "tag": "section",
  "class": "collection-banner-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "Show collection image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show collection description",
      "default": true
    }
  ]
}
{% endschema %}

