{%- style -%}
  .collection-banner {
    padding: 4rem 0 2rem;
    background: #fff;
    color: #000;
  }

  .collection-banner__title {
    font-size: clamp(2.4rem, 4vw, 3.6rem);
    font-weight: 700;
    letter-spacing: 0.05em;
    margin: 0;
    text-align: left;
  }
{%- endstyle -%}



{% schema %}
{
  "name": "Collection Banner",
  "tag": "section",
  "class": "collection-banner-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "Show collection image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show collection description",
      "default": true
    }
  ]
}
{% endschema %}

