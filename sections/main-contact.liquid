{%- style -%}
  .contact-main {
    padding: 12rem 0 8rem;
  }

  .contact-main__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
  }

  .contact-info {
    padding-right: 4rem;
  }

  .contact-info__title {
    font-size: 3.5rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    margin-bottom: 2rem;
  }

  .contact-info__text {
    font-size: 1.7rem;
    line-height: 1.8;
    color: #555;
    margin-bottom: 4rem;
  }

  .contact-info__item {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    margin-bottom: 2.5rem;
  }

  .contact-info__icon {
    width: 5rem;
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: #fff;
    flex-shrink: 0;
  }

  .contact-info__icon svg {
    width: 2.2rem;
    height: 2.2rem;
  }

  .contact-info__label {
    font-size: 1.3rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #888;
    margin-bottom: 0.5rem;
  }

  .contact-info__value {
    font-size: 1.6rem;
  }

  .contact-form {
    background: #f8f8f8;
    padding: 4rem;
  }

  .contact-form__title {
    font-size: 2.4rem;
    font-weight: 700;
    margin-bottom: 3rem;
  }

  .contact-form__group {
    margin-bottom: 2rem;
  }

  .contact-form__label {
    display: block;
    font-size: 1.3rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 0.8rem;
  }

  .contact-form__input,
  .contact-form__textarea {
    width: 100%;
    padding: 1.4rem 1.6rem;
    font-size: 1.5rem;
    border: 1px solid #ddd;
    background: #fff;
    transition: border-color 0.3s ease;
  }

  .contact-form__input:focus,
  .contact-form__textarea:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .contact-form__textarea {
    resize: vertical;
    min-height: 15rem;
  }

  .contact-form__submit {
    width: 100%;
    padding: 1.6rem;
    margin-top: 1rem;
  }

  @media (max-width: 900px) {
    .contact-main__grid {
      grid-template-columns: 1fr;
      gap: 4rem;
    }

    .contact-info {
      padding-right: 0;
    }
  }
{%- endstyle -%}

<section class="contact-main">
  <div class="container">
    <div class="contact-main__grid">
      <div class="contact-info">
        <h1 class="contact-info__title">{{ section.settings.title | default: page.title }}</h1>
        <p class="contact-info__text">{{ section.settings.text | default: "We'd love to hear from you. Send us a message and we'll respond as soon as possible." }}</p>

        <div class="contact-info__item">
          <div class="contact-info__icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
          </div>
          <div>
            <p class="contact-info__label">Address</p>
            <p class="contact-info__value">{{ section.settings.address | default: '123 Leather Lane, Fashion District, NY 10001' }}</p>
          </div>
        </div>

        <div class="contact-info__item">
          <div class="contact-info__icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
          </div>
          <div>
            <p class="contact-info__label">Email</p>
            <p class="contact-info__value">{{ section.settings.email | default: 'support@fineyst.com' }}</p>
          </div>
        </div>

        <div class="contact-info__item">
          <div class="contact-info__icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
          </div>
          <div>
            <p class="contact-info__label">Phone</p>
            <p class="contact-info__value">{{ section.settings.phone | default: '+1 (555) 123-4567' }}</p>
          </div>
        </div>
      </div>

      <div class="contact-form">
        <h2 class="contact-form__title">Send us a Message</h2>
        
        {% form 'contact', class: 'contact-form__inner' %}
          {%- if form.posted_successfully? -%}
            <p class="form-success" style="color: green; margin-bottom: 2rem;">
              Thanks for contacting us. We'll get back to you as soon as possible.
            </p>
          {%- endif -%}

          {%- if form.errors -%}
            <div class="form-errors" style="color: red; margin-bottom: 2rem;">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          <div class="contact-form__group">
            <label for="ContactName" class="contact-form__label">Name *</label>
            <input 
              type="text" 
              id="ContactName" 
              name="contact[name]" 
              class="contact-form__input"
              required
            >
          </div>

          <div class="contact-form__group">
            <label for="ContactEmail" class="contact-form__label">Email *</label>
            <input 
              type="email" 
              id="ContactEmail" 
              name="contact[email]" 
              class="contact-form__input"
              required
              autocomplete="email"
            >
          </div>

          <div class="contact-form__group">
            <label for="ContactPhone" class="contact-form__label">Phone</label>
            <input 
              type="tel" 
              id="ContactPhone" 
              name="contact[phone]" 
              class="contact-form__input"
            >
          </div>

          <div class="contact-form__group">
            <label for="ContactMessage" class="contact-form__label">Message *</label>
            <textarea 
              id="ContactMessage" 
              name="contact[body]" 
              class="contact-form__textarea"
              required
            ></textarea>
          </div>

          <button type="submit" class="btn btn--primary contact-form__submit">
            Send Message
          </button>
        {% endform %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Page",
  "tag": "section",
  "class": "contact-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Get in Touch"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Introduction text",
      "default": "We'd love to hear from you. Send us a message and we'll respond as soon as possible."
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "123 Leather Lane, Fashion District, NY 10001"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "support@fineyst.com"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "+1 (555) 123-4567"
    }
  ]
}
{% endschema %}

