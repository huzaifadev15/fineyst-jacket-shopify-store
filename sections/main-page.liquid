{%- style -%}
  .page-main {
    padding: 12rem 0 8rem;
  }

  .page-main__header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid #eee;
  }

  .page-main__title {
    font-size: clamp(3rem, 5vw, 4.5rem);
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .page-main__content {
    max-width: 80rem;
    margin: 0 auto;
    font-size: 1.7rem;
    line-height: 1.9;
  }

  .page-main__content h2 {
    margin-top: 4rem;
    margin-bottom: 2rem;
  }

  .page-main__content h3 {
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .page-main__content p {
    margin-bottom: 2rem;
  }

  .page-main__content ul,
  .page-main__content ol {
    margin-bottom: 2rem;
    padding-left: 2.5rem;
  }

  .page-main__content li {
    margin-bottom: 1rem;
  }

  .page-main__content ul {
    list-style: disc;
  }

  .page-main__content ol {
    list-style: decimal;
  }

  .page-main__content a {
    color: var(--color-secondary);
    text-decoration: underline;
  }

  .page-main__content a:hover {
    text-decoration: none;
  }

  .page-main__content img {
    max-width: 100%;
    height: auto;
    margin: 3rem 0;
  }

  .page-main__content blockquote {
    margin: 3rem 0;
    padding: 2rem 3rem;
    border-left: 4px solid var(--color-secondary);
    background: #f8f8f8;
    font-style: italic;
  }
{%- endstyle -%}

<section class="page-main">
  <div class="container">
    <header class="page-main__header">
      <h1 class="page-main__title">{{ page.title }}</h1>
    </header>

    <div class="page-main__content">
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page Content",
  "tag": "section",
  "class": "page-section",
  "settings": []
}
{% endschema %}

