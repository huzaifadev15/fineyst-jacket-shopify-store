{%- style -%}
  .error-404 {
    padding: 16rem 0 12rem;
    text-align: center;
    background: #f8f8f8;
  }

  .error-404__code {
    font-family: var(--font-heading);
    font-size: clamp(10rem, 20vw, 20rem);
    font-weight: 700;
    line-height: 1;
    color: var(--color-primary);
    opacity: 0.1;
  }

  .error-404__title {
    font-size: clamp(2.4rem, 4vw, 4rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    margin-top: -4rem;
  }

  .error-404__text {
    font-size: 1.8rem;
    color: #666;
    margin-bottom: 3rem;
    max-width: 50rem;
    margin-left: auto;
    margin-right: auto;
  }
{%- endstyle -%}

<section class="error-404">
  <div class="container">
    <p class="error-404__code">404</p>
    <h1 class="error-404__title">{{ section.settings.title }}</h1>
    <p class="error-404__text">{{ section.settings.text }}</p>
    <a href="{{ routes.root_url }}" class="btn btn--primary">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "404 Page",
  "tag": "section",
  "class": "error-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Page Not Found"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "The page you are looking for might have been removed, had its name changed, or is temporarily unavailable."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Back to Home"
    }
  ]
}
{% endschema %}

