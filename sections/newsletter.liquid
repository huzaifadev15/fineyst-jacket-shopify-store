<section class="newsletter-section">
  <div class="container">
    <div class="newsletter-section__inner">
      <div class="newsletter-section__content">
        {%- if section.settings.title != blank -%}
          <h2 class="newsletter-section__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.text != blank -%}
          <p class="newsletter-section__text">{{ section.settings.text }}</p>
        {%- endif -%}
      </div>

      <div class="newsletter-section__form">
        {% form 'customer', class: 'newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input 
            type="email" 
            name="contact[email]" 
            class="newsletter-form__input" 
            placeholder="{{ section.settings.placeholder }}"
            required
            autocomplete="email"
          >
          <button type="submit" class="newsletter-form__btn">
            {{ section.settings.button_text }}
          </button>
        {% endform %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "newsletter-section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "JOIN OUR NEWSLETTER"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Subscribe for exclusive offers, new arrivals, and style tips."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email placeholder",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Subscribe"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}

