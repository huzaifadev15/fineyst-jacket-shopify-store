      <!-- Newsletter -->
      <div class="site-footer__newsletter-section">
        <h3 class="site-footer__newsletter-title">{{ section.settings.newsletter_title }}</h3>
        <p class="site-footer__newsletter-description">{{ section.settings.newsletter_description }}</p>
        <form class="site-footer__newsletter-form">
          <input type="email" class="site-footer__newsletter-input" placeholder="{{ section.settings.newsletter_placeholder }}">
          <button type="submit" class="site-footer__newsletter-button">{{ section.settings.newsletter_button_text }}</button>
        </form>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="site-footer__bottom">
