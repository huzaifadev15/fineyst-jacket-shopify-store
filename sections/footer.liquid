<footer class="site-footer">
  <div class="container">
    <div class="site-footer__grid">
      <div class="site-footer__brand">
        <div class="site-footer__logo">
          <span>FINEYST</span> JACKETS
        </div>
        <p class="site-footer__description">
          {{ section.settings.description | default: 'Premium leather jackets crafted with passion and precision. Experience the perfect blend of style, comfort, and durability.' }}
        </p>
        <div class="site-footer__social">
          {%- if settings.social_facebook != blank -%}
            <a href="{{ settings.social_facebook }}" class="site-footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
              </svg>
            </a>
          {%- endif -%}
          {%- if settings.social_instagram != blank -%}
            <a href="{{ settings.social_instagram }}" class="site-footer__social-link" aria-label="Instagram" target="_blank" rel="noopener">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
              </svg>
            </a>
          {%- endif -%}
          {%- if settings.social_twitter != blank -%}
            <a href="{{ settings.social_twitter }}" class="site-footer__social-link" aria-label="Twitter" target="_blank" rel="noopener">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          {%- endif -%}
          {%- if settings.social_pinterest != blank -%}
            <a href="{{ settings.social_pinterest }}" class="site-footer__social-link" aria-label="Pinterest" target="_blank" rel="noopener">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C5.373 0 0 5.372 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.632-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12 24c6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'menu' -%}
            <div class="site-footer__column" {{ block.shopify_attributes }}>
              <h4 class="site-footer__column-title">{{ block.settings.title }}</h4>
              {%- if block.settings.menu != blank -%}
                <ul class="site-footer__links">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="site-footer__link">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <div class="site-footer__bottom">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      <div class="site-footer__payment">
        {{ shop.enabled_payment_types | payment_type_svg_tag }}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "footer-section",
  "settings": [
    {
      "type": "textarea",
      "id": "description",
      "label": "Brand description",
      "default": "Premium leather jackets crafted with passion and precision. Experience the perfect blend of style, comfort, and durability."
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column title",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "menu",
        "settings": {
          "title": "Shop"
        }
      },
      {
        "type": "menu",
        "settings": {
          "title": "Help"
        }
      },
      {
        "type": "menu",
        "settings": {
          "title": "Company"
        }
      },
      {
        "type": "menu",
        "settings": {
          "title": "Legal"
        }
      }
    ]
  }
}
{% endschema %}

