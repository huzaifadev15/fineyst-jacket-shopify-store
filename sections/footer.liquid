<footer class="site-footer">
  <div class="container">
    <div class="site-footer__grid">
      <!-- Company Info -->
      <div class="site-footer__company">
        <div class="site-footer__logo">
          <a href="/">
            {%- if section.settings.logo != blank -%}
              <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}">
            {%- else -%}
              <h2 class="site-footer__logo-text">
                <span class="site-footer__logo-box">FINEYST</span> JACKETS
              </h2>
            {%- endif -%}
          </a>
        </div>
        <p class="site-footer__tagline">{{ section.settings.tagline }}</p>
        <div class="site-footer__contact">
          <div class="site-footer__contact-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <span>{{ section.settings.address }}</span>
          </div>
          <div class="site-footer__contact-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            <span>{{ section.settings.phone }}</span>
          </div>
          <div class="site-footer__contact-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <span>{{ section.settings.email }}</span>
          </div>
        </div>
      </div>

      <!-- Navigation Columns -->
      <div class="site-footer__nav">
        {%- for block in section.blocks -%}
          {%- if block.type == 'link' -%}
            <div class="site-footer__nav-column" {{ block.shopify_attributes }}>
              <h3 class="site-footer__nav-title">{{ block.settings.title }}</h3>
              <ul class="site-footer__nav-list">
                {%- if block.settings.link_text_1 != blank -%}
                  <li><a href="{{ block.settings.link_url_1 }}" class="site-footer__nav-link">{{ block.settings.link_text_1 }}</a></li>
                {%- endif -%}
                {%- if block.settings.link_text_2 != blank -%}
                  <li><a href="{{ block.settings.link_url_2 }}" class="site-footer__nav-link">{{ block.settings.link_text_2 }}</a></li>
                {%- endif -%}
                {%- if block.settings.link_text_3 != blank -%}
                  <li><a href="{{ block.settings.link_url_3 }}" class="site-footer__nav-link">{{ block.settings.link_text_3 }}</a></li>
                {%- endif -%}
                {%- if block.settings.link_text_4 != blank -%}
                  <li><a href="{{ block.settings.link_url_4 }}" class="site-footer__nav-link">{{ block.settings.link_text_4 }}</a></li>
                {%- endif -%}
                {%- if block.settings.link_text_5 != blank -%}
                  <li><a href="{{ block.settings.link_url_5 }}" class="site-footer__nav-link">{{ block.settings.link_text_5 }}</a></li>
                {%- endif -%}
              </ul>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

