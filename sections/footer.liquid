            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </button>
        </div>
        <div class="site-footer__payments">
          <p class="site-footer__payments-label">Accepted Payment Methods</p>
          <div class="site-footer__payment-icons">
            {%- if shop.enabled_payment_types != blank -%}
              {%- for type in shop.enabled_payment_types -%}
                <div class="site-footer__payment-icon">
                  {{ type | payment_type_svg_tag: class: 'payment-icon' }}
                </div>
              {%- endfor -%}
            {%- else -%}
              <div class="site-footer__payment-icon site-footer__payment-icon--paypal">PayPal</div>
              <div class="site-footer__payment-icon site-footer__payment-icon--apple">Apple Pay</div>
              <div class="site-footer__payment-icon site-footer__payment-icon--visa">Visa</div>
              <div class="site-footer__payment-icon site-footer__payment-icon--mastercard">Mastercard</div>
              <div class="site-footer__payment-icon site-footer__payment-icon--amex">Amex</div>
              <div class="site-footer__payment-icon site-footer__payment-icon--discover">Discover</div>
            {%- endif -%}
