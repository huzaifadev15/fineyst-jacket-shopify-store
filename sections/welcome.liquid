<section class="welcome-section">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <h2 class="welcome-section__title">{{ section.settings.title }}</h2>
    {%- endif -%}

    {%- if section.settings.text != blank -%}
      <div class="welcome-section__text">
        {{ section.settings.text }}
      </div>
    {%- endif -%}

    {%- if section.settings.button_text != blank -%}
      <a href="{{ section.settings.button_url }}" class="btn btn--primary">
        {{ section.settings.button_text }}
      </a>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="welcome-section__features">
        {%- for block in section.blocks -%}
          <div class="welcome-section__feature" {{ block.shopify_attributes }}>
            <div class="welcome-section__feature-icon">
              {%- case block.settings.icon -%}
                {%- when 'shipping' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="1" y="3" width="15" height="13"/>
                    <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
                    <circle cx="5.5" cy="18.5" r="2.5"/>
                    <circle cx="18.5" cy="18.5" r="2.5"/>
                  </svg>
                {%- when 'quality' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="8" r="7"/>
                    <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"/>
                  </svg>
                {%- when 'returns' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="1 4 1 10 7 10"/>
                    <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"/>
                  </svg>
                {%- when 'secure' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                  </svg>
                {%- when 'leather' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
                    <line x1="3" y1="6" x2="21" y2="6"/>
                    <path d="M16 10a4 4 0 0 1-8 0"/>
                  </svg>
                {%- else -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
              {%- endcase -%}
            </div>
            <h3 class="welcome-section__feature-title">{{ block.settings.title }}</h3>
            <p class="welcome-section__feature-text">{{ block.settings.text }}</p>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Welcome Section",
  "tag": "section",
  "class": "welcome-section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "WELCOME TO FINEYST"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Discover the finest collection of premium leather jackets, handcrafted with attention to detail and designed to make a statement. Each piece in our collection represents the perfect blend of classic style and modern sophistication.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "shipping", "label": "Shipping" },
            { "value": "quality", "label": "Quality" },
            { "value": "returns", "label": "Returns" },
            { "value": "secure", "label": "Secure" },
            { "value": "leather", "label": "Leather" },
            { "value": "check", "label": "Checkmark" }
          ],
          "default": "shipping"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "On orders over $200"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Welcome Section",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "shipping",
            "title": "Free Shipping",
            "text": "On orders over $200"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "quality",
            "title": "Premium Quality",
            "text": "Genuine leather guaranteed"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "returns",
            "title": "Easy Returns",
            "text": "30-day return policy"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "secure",
            "title": "Secure Payment",
            "text": "100% secure checkout"
          }
        }
      ]
    }
  ]
}
{% endschema %}

